<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/feeds_seperator"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:background="@color/app_background_grey" />

    <TextView
        android:id="@+id/like_a_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:layout_below="@+id/feeds_seperator"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/like"
        android:gravity="center"
        android:text="2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/commnet_on_a_feed"
        android:layout_width="wrap_content"
        android:layout_below="@+id/feeds_seperator"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/comment"
        android:gravity="center"
        android:text="20"
        android:textSize="20sp" />

</RelativeLayout>