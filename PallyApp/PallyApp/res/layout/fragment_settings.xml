<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:padding="5dp" >

            <ImageView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/change_password" />

            <TextView
                android:id="@+id/old_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/change_password"
                android:layout_alignRight="@+id/new_password"
                android:layout_below="@+id/change_password"
                android:layout_marginTop="14dp"
                android:text="Old Password :"
                android:textColor="@android:color/holo_red_light" />

            <EditText
                android:id="@+id/old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/old_password_txt"
                android:layout_margin="8dp"
                android:background="@drawable/round_box_edittext"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="4dp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/new_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/new_password"
                android:layout_below="@+id/old_password"
                android:text="New Password :" />

            <EditText
                android:id="@+id/new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/new_password_txt"
                android:layout_margin="8dp"
                android:background="@drawable/round_box_edittext"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_password"
                android:layout_below="@+id/new_password"
                android:layout_marginTop="15dp"
                android:src="@drawable/reset_button" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/relative1"
            android:layout_marginTop="12dp"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view1"
            android:layout_below="@+id/view1"
            android:layout_marginBottom="10dp"
            android:padding="8dp" >

            <ImageButton
                android:id="@+id/toggle_friend_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:background="@color/button_transparent"
                android:src="@drawable/off_button" />

            <ImageView
                android:id="@+id/view_friend_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggle_friend_request"
                android:layout_alignParentLeft="true"
                android:src="@drawable/friend_request" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/relative2"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view2"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/view_invite_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="22dp"
                android:src="@drawable/invite_friend" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/relative3"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:padding="8dp" >

            <ImageButton
                android:id="@+id/toggle_set_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:background="@color/button_transparent"
                android:src="@drawable/on_button" />

            <ImageView
                android:id="@+id/view_set_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggle_set_notification"
                android:layout_alignParentLeft="true"
                android:src="@drawable/notification_setting" />
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/relative4"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relative4"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/view_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="22dp"
                android:src="@drawable/about_us" />
        </RelativeLayout>
    </RelativeLayout>
    
    </ScrollView>
    
     </RelativeLayout>
